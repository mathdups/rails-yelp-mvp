<div class=container>
  <h1>All Restaurants</h1>
  <table>
    <thead>
      <tr>
        <div>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
          <td><%= restaurant.category %></td>
          <br>
        </tr>
      <% end %>
    <%= link_to "Create a new restaurant", new_restaurant_path , class:"btn btn-primary" %>
    </tbody>
  </table>
</div>









